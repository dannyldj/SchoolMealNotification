<Window x:Class="SchoolMealNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolMealNotification"
        mc:Ignorable="d"
        Title="SchoolMeal" Height="450" Width="800"
        ResizeMode="CanMinimize" WindowStyle="ToolWindow">
    <Window.Resources>
        <!--DatePicker 날짜 포맷 스타일-->
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <TextBlock x:Name="tbDateViewer" Text="{Binding Path=SelectedDate, StringFormat='yyyy/MM/dd',
                            RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="MealListView" Grid.Column="0" ItemsSource="{Binding meals}"
                  ScrollViewer.CanContentScroll="False">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header=" " DisplayMemberBinding="{Binding MMEAL_SC_NM}"/>
                    <GridViewColumn Header="메뉴" DisplayMemberBinding="{Binding DDISH_NM}"/>
                    <GridViewColumn Header="원산지" DisplayMemberBinding="{Binding ORPLC_INFO}"/>
                    <GridViewColumn Header="칼로리" DisplayMemberBinding="{Binding CAL_INFO}"/>
                    <GridViewColumn Header="영양소" DisplayMemberBinding="{Binding NTR_INFO}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1">
            <TextBlock HorizontalAlignment="Center">날짜</TextBlock>
            <DatePicker x:Name="dpDateInput" SelectedDate="{Binding dateInput}"/>
            <Button x:Name="btnLoad" Command="{Binding loadCommand}">불러오기</Button>
        </StackPanel>
        <TextBlock Grid.Column="1" Width="90" VerticalAlignment="Bottom"
                   Text="* 표시된 메뉴는 알레르기 유발 가능성 있음" TextWrapping="Wrap"/>
    </Grid>
</Window>
